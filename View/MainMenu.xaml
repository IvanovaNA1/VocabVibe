<Page x:Class="VocabVibe.View.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VocabVibe.View"
      mc:Ignorable="d" 
      Title="MainWindow" Height="720" Width="1080">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#687EFF" Offset="0.2"/>
                <GradientStop Color="#FF9CAB" Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock Text="VocabVibe" Style="{StaticResource LogoText}"/>
        <TextBlock Text="Выберите ваш уровень английского" Style="{StaticResource MainText}"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,50,0,0">
            <Button Content="Начальный" Style="{StaticResource MainButtonStyle}" Click="EasyButton_Click"/>
            <Button Content="Средний" Style="{StaticResource MainButtonStyle}" Click="MediumButton_Click"/>
            <Button Content="Продвинутый" Style="{StaticResource MainButtonStyle}" Click="HardButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
